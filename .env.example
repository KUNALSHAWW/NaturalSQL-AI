# AI SQL Chat Assistant - Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ============================================
# GROQ API CONFIGURATION
# ============================================
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# MYSQL DATABASE CONFIGURATION (Optional)
# ============================================
# Only needed if you plan to connect to MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=your_database

# ============================================
# APPLICATION SETTINGS
# ============================================
# Default LLM model: Llama3-8b-8192, Llama3-70b-8192, or Mixtral-8x7b-32768
DEFAULT_MODEL=Llama3-8b-8192

# Temperature for response generation (0.0 to 1.0)
# Lower = more focused, Higher = more creative
DEFAULT_TEMPERATURE=0.1

# Maximum iterations for agent reasoning
MAX_ITERATIONS=15

# Cache TTL for database connections (in hours)
CACHE_TTL=2

# ============================================
# ADVANCED SETTINGS (Optional)
# ============================================
# Enable debug mode
DEBUG=False

# Enable verbose logging
VERBOSE=True

# Maximum query result rows to display
MAX_DISPLAY_ROWS=100

# Query timeout in seconds
QUERY_TIMEOUT=30
